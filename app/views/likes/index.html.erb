<h1 class="text-center"><%= "#{@user.name}のいいね一覧　#{@user.likes.count}件" %></h1>
<div class="mb-3">
  <table class="table table-hover">
    <thead class="thread-default">
      <tr>
        <th>ユーザー名</th>
        <th>病気の名前</th>
        <th>初期症状</th>
      </tr>
      <tbody>
          <% @likes.each do |like| %>
          <tr>
            <td><%= link_to like.topic.user.name, user_path(like.topic.user) %></td>
            <td><%= link_to like.topic.sick_name, like.topic %></td>
            <td><%= like.topic.initial_symptom %></td>
          </tr>
          <% end %>
      </tbody>
    </thead>
  </table>
  <div class="digg_pagination">
    <%= will_paginate @likes %>
  </div>
</div>