<h1 class="text-center mt-3">ログイン</h1>
   <div class="row text-center">
      <div class="col-sm-12">

      <%= form_with scope: :session, local: true do |f| %>
         <div class="form-group">
            <%= f.label :email, 'メールアドレス'%><br>
            <%= f.text_field :email,id: 'session_email',:size=>"40" %>
         </div>
         <div class="form-group">
            <%= f.label :password, 'パスワード' %><br>
            <%= f.password_field :password,id: 'session_password',:size=>"40" %>
         </div>
      <%= f.submit 'ログインする',class: 'btn btn-primary' %>
      <% end %>
      </div>
   </div>