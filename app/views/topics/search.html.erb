<h1 class="text-center"><%= "「#{@search}」の検索結果" %></h1>
<div class="mb-3">
  <table class="table table-hover">
    <thead class="thread-default">
      <tr>
        <th>ユーザー名</th>
        <th>病気の名前</th>
        <th>初期症状</th>
      </tr>
      <tbody>
          <% @topics.each do |topic| %>
          <tr>
            <td><%= link_to topic.user.name, user_path(topic.user) %></td>
            <td><%= link_to topic.sick_name, topic %></td>
            <td><%= topic.initial_symptom %></td>
          </tr>
          <% end %>
      </tbody>
    </thead>
  </table>
</div>
