<h1>投稿一覧</h1>

<div class="mb-3">
  <table class="table table-hover">
    <thead class="thread-default">
      <tr>
        <th>病気の名前</th>
        <th>初期症状</th>
        <th>詳細</th>
      </tr>
      <tbody>
          <% @topics.each do |topic| %>
          <tr>
            <td><%= link_to topic.sick_name, topic %></td>
            <td><%= topic.initial_symptom %></td>
            <td><%= link_to '詳細',topic_path(topic),class: 'btn btn-primary' %></td>
          </tr>
          <% end %>
      </tbody>
    </thead>
  </table>
</div
