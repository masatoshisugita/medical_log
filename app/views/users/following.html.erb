<h1 class="text-center"><%= "#{@user.name}のフォロー一覧　#{@user.following_user.count}件" %></h1>
  <div class="mb-3">
  <table class="table table-hover">
    <thead class="thread-default">
      <tr>
        <th>ユーザー名</th>
        <th>詳細</th>
      </tr>
      <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user) %></td>
            <td><%= link_to '詳細',user_path(user),class: 'btn btn-success' %></td>
          </tr>
          <% end %>
      </tbody>
    </thead>
  </table>
  <div class="digg_pagination">
    <%= will_paginate @users %>
  </div>
</div>
